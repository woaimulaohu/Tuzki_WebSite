<!--end-contact-->
<script type="text/javascript">
    $(document).ready(function () {
        $().UItoTop({ easingType: 'easeOutQuart' });
    });

    function contactMe() {

        if ($('#Message').val().length == 0) {
            tips('leftForm', "不可以发空消息", 'info');
            setTimeout("$('#tips').remove()", 5000);
            return;
        }
        if ($('#email').val().length == 0) {
            tips('leftForm', "请填写邮箱地址", 'info');
            setTimeout("$('#tips').remove()", 5000);
            return;
        }
        if (/^\w+([-+.]\w+)*@@\w+([-.]\w+)*\.\w+([-.]\w+)*$/.test($('#email').val()) == false) {
            tips('leftForm', "邮箱格式不正确", 'warning');
            setTimeout("$('#tips').remove()", 5000);
            return;
        }
        $.post('About/contactMe', {
            'Message': $('#Message').val(),
            'customContact': $('#customContact').val(),
            'email': $('#email').val(),
            'name': $('#name').val()
        }, function (data) {
            if (data == 'success') {
                tips('leftForm', "感谢你的留言", 'success');
                setTimeout("$('#tips').remove()", 5000);
            } else {
                tips('leftForm', "发送失败", 'danger');
                setTimeout("$('#tips').remove()", 5000);
            }
        });
    }
</script>
