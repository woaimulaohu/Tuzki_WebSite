<!DOCTYPE html>
<html>
<head>
    <meta name="baidu-site-verification" content="m8Wa6p2Sjd" />
    <title>Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="woaimulaohu,tuzkiZhang,coder,blog,bootstrap,.net,razor" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="~/Content/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/css/blogStyle.css" rel="stylesheet" />
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.js"></script>
    <!---- start-smoth-scrolling---->
    <script type="text/javascript" src="~/Content/js/move-top.js"></script>
    <script type="text/javascript" src="~/Content/js/easing.js"></script>
    <script type="text/javascript" src="~/Content/js/commonFunc.js"></script>
    <script src="~/Content/js/iconfont.js"></script>
    <!--Jquery cookie操作扩展-->
    <script type="text/javascript" src="~/Content/js/jquery.cookie-1.4.1.min.js"></script>
    <script type="text/javascript" src="~/Content/js/jquery.cookie.js"></script>
    <script type="text/javascript" src="~/Content/js/MyScript.js"></script>
    <!--emoji表情开始-->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/emojione/2.1.4/assets/sprites/emojione.sprites.css">
    @*<script type="text/javascript" src="to/path/js/jquery.min.js"></script>*@
    <link href="~/Content/js/emoji/emojionearea.min.css" rel="stylesheet" />
    <script src="~/Content/js/emoji/emojionearea.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/emojione/1.5.2/lib/js/emojione.min.js"></script>
    <!--emoji表情结束-->

    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
            });
        });
        //导航栏跳转到对应模块
        function jumpClick(target) {
            $.post(target, function (data) {
                $("#MiddleContent").html(data);
            });
        }
        //直接跳转到首页
        function getHome() {
            location.href = 'Home';
        }
        function hideLoading() {
            $('#loading').modal('hide');
            $("#loadingTips").text('');
        }
        function showLoading(tips) {
            if (tips != '') {
                $("#loadingTips").text(tips);
            }
            $('#loading').modal('show');
        }
    </script>
    <!--start-smoth-scrolling-->
    <style type="text/css">
        .icon {
            width: 1em;
            height: 1em;
            vertical-align: -0.15em;
            fill: currentColor;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <!-- loading -->
    <div class="modal fade" id="loading" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop='static'>
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="margin-top: 200px;height:250px">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">提示</h4>
                </div>
                <div class="modal-body">
                    <ul class="list-inline">
                        <li>
                            <img style="height:150px" src="~/Content/images/HomeImg/loader2.svg" />
                        </li>
                        <li style="vertical-align:middle">
                            <div>
                                <h2>正在加载请稍后...</h2>
                                <h4 style="color:#4D87BC;font-style:italic" id="loadingTips"></h4>
                            </div>
                        </li>
                    </ul>
                </div>
                @*<div class="modal-footer"></div>*@
            </div>
        </div>
    </div>

    @Html.Partial("~/Views/_Head.cshtml")
    <div id="MiddleContent" style="min-height:768px">
        @Html.Partial("~/Views/Home/Index.cshtml")
    </div>
    @Html.Partial("~/Views/_Foot.cshtml")
</body>
</html>
