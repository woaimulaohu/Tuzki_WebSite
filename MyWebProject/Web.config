  <add name="Entity" connectionString="data source=192.168.1.4\SQLEXPRESS;initial catalog=MyWebSite;persist security info=True;user id=WebManager;password=123456;MultipleActiveResultSets=True;App=EntityFramework" providerName="System.Data.SqlClient" /></connectionStrings>

</configuration>